<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToPlay"
    android:background="@color/Green">


  <Button
      android:id="@+id/HowToPlayBackButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/Yellow"
      android:text="Back"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.945"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.071" />


  <TextView
      android:id="@+id/editTextTextPersonName4"
      android:layout_width="281dp"
      android:layout_height="40dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="Rules and General Information"
      android:textColor="@color/black"
      android:textSize="18dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.04"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.043" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="69dp"
      android:layout_height="33dp"
      android:layout_marginStart="28dp"
      android:text="Objective: "
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4"
      app:layout_constraintVertical_bias="0.3" />

  <TextView
      android:id="@+id/editTextTextMultiLine"
      android:layout_width="269dp"
      android:layout_height="112dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:text="Fill in an empty square with a word from nine different options (translation of the equivalent word is also
considered the same kind). The game is completed when all squares are filled while satisfying the rules below:"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

  <TextView
      android:id="@+id/editTextTextMultiLine2"
      android:layout_width="324dp"
      android:layout_height="51dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:text="1. Each row, column, and 3x3 box must have one of each word (9 words). This means that a word can't
be repeated within these three areas."
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/HowToPlayBackButton" />

  <TextView
      android:id="@+id/editTextTextMultiLine3"
      android:layout_width="329dp"
      android:layout_height="44dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:text="2. The game starts with random spaces filled in by default to help user solve the puzzle"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

  <TextView
      android:id="@+id/editTextTextMultiLine4"
      android:layout_width="354dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:text="3. If the user inputs a word into a space that is invalid, the game will revert back to its previous state"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine3" />

</androidx.constraintlayout.widget.ConstraintLayout>