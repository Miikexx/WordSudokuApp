<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Green"
    tools:context=".StartGame">

    <Button
        android:id="@+id/tempButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/Yellow"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

    <TextView
        android:id="@+id/livesCounter"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />


    <TableLayout
        android:id="@+id/tableForButtons"
        android:layout_width="404dp"
        android:layout_height="370dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207">


    </TableLayout>

    <TableLayout
        android:id="@+id/tableForWords"
        android:layout_width="409dp"
        android:layout_height="196dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableForButtons"
        app:layout_constraintVertical_bias="0.733">


    </TableLayout>
    <TextView
    android:id="@+id/wordDisplay"
    android:layout_width="222dp"
    android:layout_height="42dp"
    android:layout_marginStart="100dp"
    android:layout_marginTop="23dp"
    android:layout_marginEnd="177dp"
    android:layout_marginBottom="23dp"
    android:textAlignment="center"
    android:textSize="24sp"
    app:layout_constraintBottom_toTopOf="@+id/tableForButtons"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="4dp"
            android:layout_height="290dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="135.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="4dp"
            android:layout_height="290dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="271dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="400dp"
            android:layout_height="4dp"
            android:background="@color/black"
            android:layout_marginTop="124dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="400dp"
            android:layout_height="4dp"
            android:background="@color/black"
            android:layout_marginTop="223.5dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>